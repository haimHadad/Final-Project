<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FinalProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/darktheme.min.css" />
</head>
<body>
    <header style="background-color:transparent">
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="#"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a id="assetsNavBar" class="nav-link" asp-area="" asp-controller="Home" asp-action="Login">Assets<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item active">
                        <a id="createContractNavBar" class="nav-link" asp-area="" asp-controller="CreateContract" asp-action="CreateContract">Create Contract<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Login">Contracts Status<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Logout">Logout<span class="sr-only">(current)</span></a>
                    </li>
                </ul>
                <ul class="navbar-nav" dir="rtl">
                    <li class="nav-item active">
                        <input type="button" class="btn btn-warning nav-item" value="Copy" onclick="copyToClipBoard()" />
                    </li>
                    <li class="nav-item active">
                        <input id="PublicKeyInput" class="form-control" type="text" value=@Model.publicKey readonly>
                    </li>
                    <li class="nav-item active">
                        <strong class="pr-2 nav-link" style="color:white !important;"> <label id="ilsBalance"></label>  @await Model.get_ETH_Balance()  </strong>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="modal" id="dialogCopy">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Public-Key</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <h5>Public Key has been copied to clipboard.</h5>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            <div class="modal position-fixed" id="dialogCopy">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Public-Key</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <h5 id="generalDialogContent">Public Key has been copied to clipboard.</h5>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal position-fixed" id="DialogDeployContractMessage">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 id="DialogDeployContractMessageTitle" class="modal-title"></h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div style="display:flex">
                                <!--<h5 id="DialogDeployContractMessageContent"><a id="EtherscanURL">Here.</a></h5>-->
                                <h5 id="DialogDeployContractMessageContent"></h5>
                                <a id="EtherscanURL">Here.</a>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" id="closeButtonDeploy" class="btn btn-danger" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>

            <script type="text/javascript">
                (function ()
                {
                    var accountBalance = @await Model.get_ILS_Balance()
                   accountBalance = accountBalance.toFixed(2);
                    var accountBalance = accountBalance.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")
                    document.getElementById("ilsBalance").innerHTML = "₪"+accountBalance.bold() +" | ETH";
                })();
                function copyToClipBoard()
                {
                    var copyText = document.getElementById("PublicKeyInput");
                    copyText.select();
                    copyText.setSelectionRange(0, 99999);
                    document.execCommand("copy");
                    $('#dialogCopy').modal('show');
                }
            </script>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">- Assets Purchase & Selling through Blockchain based Smart Contracts -</div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
