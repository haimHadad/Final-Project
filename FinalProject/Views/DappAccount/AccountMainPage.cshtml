@model FinalProject.Models.DappAccount
@{
    ViewData["Title"] = "AccountMainPage";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<br />
<h1>Your Assets</h1>
<table class="table table-hover">
    <thead align="center">
        <tr>
            <th scope="col">AssetID</th>
            <th scope="col">Loaction</th>
            <th scope="col">Action</th>

        </tr>
    </thead>
    <tbody align="center">
        @{ int i = 0;}
        @foreach (var a in @Model.OwnAssetsList)
        {
            var serialModel = Newtonsoft.Json.JsonConvert.SerializeObject(a);
            var rateILS = @Model.getExchangeRate_ETH_To_ILS();
            var assetPriceInILS = rateILS * a.Price;
            //var dSerialModel = Newtonsoft.Json.JsonConvert.DeserializeObject(serialModel);            
        <tr>
            <td>@a.AssetID</td>
            <td>@a.Loaction</td>  
            <td><button class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong" onclick="offerContract( @serialModel, @assetPriceInILS)">View Details</button></td>
            
        </tr>
            i++;
        }

    </tbody>
</table>
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true" >
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="dialogTitle">Asset Details</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="asset_dialog_body">
                <center><img class="w-75 p-3" id="dialogImageURL"></center>
                <p id="dialogAssetID"></p>
                <p id="dialogOwnerID"></p>
                <p id="dialogOwnerPublicKey"></p>
                <p id="dialogLoaction"></p>
                <p id="dialogAreaIn"></p>
                <p id="dialogRooms"></p>
                <p id="dialogPrice"></p>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
@section scripts
{

    <script type="text/javascript">
        function offerContract(param, priceInILS )
        {                           
            var fullPublicKey = param.OwnerPublicKey;
            var partOne = fullPublicKey.substring(0, 12);
            var partTwo = " . . . ";
            var partThree = fullPublicKey.substring(32, fullPublicKey.length);
            var publicKeyToShow = "" + partOne + partTwo + partThree;

            document.getElementById("dialogAssetID").innerHTML = "Asset No : ".bold() + param.AssetID;
            document.getElementById("dialogOwnerID").innerHTML = "Your ID : ".bold() + param.OwnerID;
            document.getElementById("dialogOwnerPublicKey").innerHTML = "Your PublicKey :\n".bold() + publicKeyToShow;//param.OwnerPublicKey ;
            document.getElementById("dialogLoaction").innerHTML="Loaction : ".bold() + param.Loaction;
            document.getElementById("dialogAreaIn").innerHTML="AreaIn : ".bold() + param.AreaIn;
            document.getElementById("dialogRooms").innerHTML="Rooms : ".bold() + param.Rooms;
            document.getElementById("dialogImageURL").setAttribute("src",param.ImageURL); 
            document.getElementById("dialogPrice").innerHTML="Purchace Price : ".bold() + param.Price +" ETH / ₪" + priceInILS;


            $('.table tbody').on('click', '.btn', function () {
                    var row = $(this).closest('tr');
                    var col = row.find('td:eq(1)').text();
                    //document.getElementById("asset_dialog_body").innerHTML("vddv");
                })
        }
        $('#myModal').on('shown.bs.modal', function () {
            $('#myInput').trigger('focus')
        })
    </script>
}

