@model FinalProject.Models.DappAccount
@{
    ViewData["Title"] = "AccountMainPage";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<h1>AccountMainPage</h1>
<table class="table table-hover" id="assets_table">
    <thead>
        <tr>
            <th scope="col">Public Key</th>
            <th scope="col">Asset's Address</th>
            <th scope="col">Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in @Model.OwnAssetsList)
        {
            <tr>
                <td>@a.accountAddress</td>
                <td>@a.address</td>
                <td><button class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong" onclick="func()">View Details</button></td>
            </tr>
        }

    </tbody>
</table>
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="asset_dialog_body"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script type="text/javascript">
        function func() {
            $('.table tbody').on('click', '.btn', function () {
                var row = $(this).closest('tr');
                var col = row.find('td:eq(1)').text();
                document.getElementById("asset_dialog_body").innerHTML(col);
            })
        }
        $('#myModal').on('shown.bs.modal', function () {
            $('#myInput').trigger('focus')
        })
    </script>
}
